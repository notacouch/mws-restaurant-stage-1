{
  "env": {
    "browser": true
  },
  "parserOptions": { "ecmaVersion": 6 },
  "plugins": ["prettier"],
  "extends": ["prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "no-trailing-spaces": "warn",
    "indent": ["warn", 2],
    "no-extra-semi": "warn",
    "semi-style": ["warn", "last"],
    "no-const-assign": "error",
    "no-var": "error",
    "no-multi-str": "error",
    "no-array-constructor": "error",
    "no-new-object": "error",
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }]
  }
}
